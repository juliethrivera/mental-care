<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6CDF6"
    android:textAlignment="textEnd"
    tools:context=".fragments.TestMentalBlankFragment">

    <ImageView
        android:id="@+id/anterior"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_back_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/testMental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Test Mentales"
        android:textColor="#000000"
        android:textColorHint="#130C0C"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/testMental" />

    <TextView
        android:id="@+id/cantidadPreguntas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="1/20"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/pregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progreso" />

    <TextView
        android:id="@+id/pregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text="1.Te sientes abrumad@ por las actividades de tu vida diaria?"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cantidadPreguntas" />

    <RadioGroup
        android:id="@+id/opciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pregunta">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/opcion_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Nunca"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton

            android:id="@+id/opcion_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raramente"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton

            android:id="@+id/opcion_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A veces"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton

            android:id="@+id/opcion_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frecuentemente"
            android:textColor="#000000" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/opcion_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siempre"
            android:textColor="#000000" />
    </RadioGroup>

    <Button
        android:id="@+id/Siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Siguiente "
        android:textColor="@color/black"
        android:textColorHint="#C1A8ED"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opciones" />

</androidx.constraintlayout.widget.ConstraintLayout>